{
  "name": "Ticket-Support",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/postgres": "^2",
    "@sap/cds": "^9",
    "express": "^4",
    "nodemailer": "^7.0.12",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-ticketsupport-ui": "cds watch --open com.ticketsupport.ticketsupportui/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy Ticket-Support --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db.sqlite"
        }
      },
      "html5-repo": true
    }
  },
  "workspaces": [
    "app/*"
  ]
}
