<mvc:View
    controllerName="fullui.com.fullui.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    height="100%"
>
    <Page
        id="page"
        title="{i18n>projectName}"
    >
        <GenericTile
            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
            header="Courses"
            press="onPressCourses"
            frameType="OneByOne"
            subheader="Subtitle"
        >
            <TileContent contentType="image">
                <Image
                    src="image/Courses.webp"
                    width="100px"
                />
            </TileContent>
        </GenericTile>

        <GenericTile
            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
            header="Student Information"
            press="onPressStudent"
            frameType="OneByOne"
            subheader="Subtitle"
        >
            <TileContent contentType="image">
                <Image
                    src="image/Student.webp"
                    width="100px"
                />
            </TileContent>
        </GenericTile>
        <GenericTile
            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
            header="Teacher Information"
            press="onPressTeacher"
            frameType="OneByOne"
            subheader="Subtitle"
        >
            <TileContent contentType="image">
                <ImageContent
                    class="sapUiLargeMarginTop sapUiLargeMarginBottom"
                    src="image/jack.jpg"
                    description="Logo"
                    press="press"
                />
                <Image
                    src="image/Teacher.webp"
                    width="100px"
                />
            </TileContent>
        </GenericTile>
        <GenericTile
            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
            header="Attendence Information"
            press="onPressAttendence"
            frameType="OneByOne"
            subheader="Subtitle"
        >
            <TileContent contentType="image">
                <ImageContent
                    class="sapUiLargeMarginTop sapUiLargeMarginBottom"
                    src="image/jack.jpg"
                    description="Logo"
                    press="press"
                />
                <Image
                    src="image/Teacher.webp"
                    width="100px"
                />
            </TileContent>
        </GenericTile>
    </Page>
</mvc:View>
