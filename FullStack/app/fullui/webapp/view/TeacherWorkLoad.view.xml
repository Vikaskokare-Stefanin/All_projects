<mvc:View
    controllerName="fullui.com.fullui.controller.TeacherWorkLoad"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    xmlns:goals="sap.uxap.sample.SharedBlocks.goals"
    height="100%"
>
    <m:Page
        title="Teacher Work Load"
        class="sapUiContent"
        showNavButton="true"
        navButtonPress="onNavButtonDashFromTeacher"
    >
        <ObjectPageLayout
            id="ObjectPageLayoutwokload"
            showTitleInHeaderContent="true"
            upperCaseAnchorBar="false"
        >
            <headerTitle>
                <ObjectPageDynamicHeaderTitle>
                    <expandedHeading>
                        <m:Title
                            text="Denise Smith"
                            wrapping="true"
                        />
                    </expandedHeading>

                    <snappedHeading>
                        <m:FlexBox
                            fitContainer="true"
                            alignItems="Center"
                        >
                            <m:Avatar
                                src="sap-icon://picture"
                                backgroundColor="Random"
                                class="sapUiTinyMarginEnd"
                            />
                            <m:Title
                                text="Denise Smith"
                                wrapping="true"
                            />
                        </m:FlexBox>
                    </snappedHeading>

                    <expandedContent>
                        <m:Text text="Senior Developer" />
                    </expandedContent>

                    <snappedContent>
                        <m:Text text="Senior Developer" />
                    </snappedContent>

                    <snappedTitleOnMobile>
                        <m:Title text="Senior Developer" />
                    </snappedTitleOnMobile>

                    <actions>
                        <m:Button
                            text="Edit"
                            type="Emphasized"
                        />
                        <m:Button
                            type="Transparent"
                            text="Delete"
                        />
                        <m:Button
                            type="Transparent"
                            text="Copy"
                        />
                        <m:OverflowToolbarButton
                            icon="sap-icon://action"
                            type="Transparent"
                            text="Share"
                            tooltip="action"
                        />
                    </actions>
                </ObjectPageDynamicHeaderTitle>
            </headerTitle>

            <headerContent>
                <m:FlexBox wrap="Wrap">
                    <m:Avatar
                        src="sap-icon://picture"
                        backgroundColor="Random"
                        displaySize="L"
                        class="sapUiTinyMarginEnd"
                    />

                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <m:ObjectStatus
                            title="User ID"
                            text="12345678"
                        />
                        <m:ObjectStatus
                            title="Language"
                            text="English"
                        />
                        <m:ObjectStatus
                            title="Country"
                            text="USA"
                        />
                        <m:ObjectStatus
                            title="Phone Number"
                            text="1-844-726-7733"
                        />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <m:ObjectStatus
                            title="Functional Area"
                            text="Developement"
                        />
                        <m:ObjectStatus
                            title="Cost Center"
                            text="PI DFA GD Programs and Product"
                        />
                        <m:ObjectStatus
                            title="Email"
                            text="email@address.com"
                        />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <layout:layoutData>
                            <ObjectPageHeaderLayoutData
                                visibleS="false"
                                visibleM="false"
                            />
                        </layout:layoutData>
                        <m:ObjectStatus
                            text="Senior UI Developer"
                            state="Success"
                        />
                        <m:RatingIndicator
                            maxValue="6"
                            value="5"
                            tooltip="Rating Tooltip"
                        />
                    </layout:VerticalLayout>
                </m:FlexBox>
            </headerContent>

             <sections>
                <ObjectPageSection
                    titleUppercase="false"
                    title="2014 Goals Plan"
                >
                    <subSections>
                    
                        <ObjectPageSubSection
                            title="Total Assigned Courses"
                            titleUppercase="false"
                        >
                      <m:Text text="This section outlines the goals set for the year 2014, focusing on key achievements and objectives."/>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
            <sections>
                <ObjectPageSection
                    titleUppercase="false"
                    title="2014 Goals Plan"
                >
                    <subSections>
                    
                        <ObjectPageSubSection
                            title="Goal summary"
                            titleUppercase="false"
                        >
                      
                            <m:Table
                                id="idProductsTablewokload"
                                inset="false"
                                mode="SingleSelectLeft"
                                items="{TableModel>/}"
                            >
                                <m:headerToolbar>
                                    <m:OverflowToolbar>
                                        <m:Title text="Student Information" />
                                        <m:ToolbarSpacer />
                                    </m:OverflowToolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="Name" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="Age" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="Mobile No." />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="Gender" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem
                                        vAlign="Middle"
                                        type="Navigation"
                                        press="onStudentSelect"
                                    >
                                        <m:cells>
                                            <m:ObjectIdentifier
                                                title="{TableModel>Name}"
                                            />
                                            <m:Text text="{TableModel>Age}" />
                                            <m:Text text="{TableModel>phone}" />
                                            <m:Text
                                                text="{TableModel>gender}"
                                            />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
    </m:Page>
</mvc:View>
