{
  "name": "EX",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.7",
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4.2.0",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap-cloud-sdk/util": "^4.2.0",
    "@sap/cds": "^9",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/low-code-event-handler": "^1.2.5",
    "@sap/xssec": "^4",
    "and": "^0.0.3",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-exui": "cds watch --open exui.com.exui/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy EX --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "app-service": {
        "impl": "@sap/low-code-event-handler"
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "db": {
        "kind": "hana"
      },
      "connectivity": true,
      "destinations": true,
      "html5-repo": true,
      "API_RFQ_PROCESS_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_RFQ_PROCESS_SRV",
        "[hybrid]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_RFQ_PROCESS_SRV",
            "headers": {
              "APIkey": "TFNRSnBjA1d8GhwtjYRAlZbBIRl1bppx"
            }
          }
        }
      },
      "API_COMPANYCODE_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_COMPANYCODE_SRV",
        "credentials": {
          "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_COMPANYCODE_SRV",
          "headers": {
            "APIkey": "TFNRSnBjA1d8GhwtjYRAlZbBIRl1bppx"
          }
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ]
}
